@model MvcCv.Models.entity.TblEğitimlerim
@{
    ViewBag.Title = "EgitimDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Eğitim Düzenleme Sayfası</h4>
<br />
<form method="post" class="form-group">
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Baslik, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Alt Başlık")
    @Html.TextBoxFor(x => x.AltBaslik2, new { @class = "form-control" })
    @Html.Label("Alt Başlık2")
    @Html.TextBoxFor(x => x.AltBaslik2, new { @class = "form-control" })
    @Html.Label("GNO")
    @Html.TextBoxFor(x => x.GNO, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.GNO, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Tarih, "", new { @class = "text-danger" })


    <br />
    <button class="btn btn-info">Güncelle</button>
</form>