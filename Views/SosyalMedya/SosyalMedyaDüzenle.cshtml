@model MvcCv.Models.entity.TblSosyalMedya
@{
    ViewBag.Title = "SosyalMedyaDüzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Sosyal Medya Hesap Düzenleme Sayfası</h2>
<br />

<form method="post">
    @Html.Label("Sosyal Medya Adı")
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    @Html.Label("Sosyal Medya Linki")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    <br />
    @Html.Label("Sosyal Medya İkonu")
    @Html.TextBoxFor(x => x.Ikon, new { @class = "form-control" })
    <br />
    <button class="btn btn-success" type="submit">Güncelle</button>
</form>
